<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadScanAct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/backgroundpadangintl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></View>
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/mregular"
                android:gravity="center"
                android:text="Data Peserta"
                android:textColor="@color/WhitePrimary"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bg_layout_white"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:fontFamily="@font/mregular"
                        android:text="@string/Kartu"
                        android:textColor="@color/GrayPrimary"
                        android:textSize="20sp"></TextView>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                android:orientation="horizontal">
                                <Button
                                    android:id="@+id/bttnUploadKK"
                                    android:text="KK"
                                    android:textColor="@color/WhitePrimary"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="24dp"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/bttn_sigin"
                                    android:inputType="text">
                                </Button>
                                <Button
                                    android:id="@+id/bttnUploadKtp"
                                    android:text="KTP"
                                    android:textColor="@color/WhitePrimary"
                                    android:textSize="20sp"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginRight="4dp"
                                    android:background="@drawable/bttn_sigin"
                                    android:inputType="text">
                                </Button>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                android:orientation="horizontal">
                                <Button
                                    android:layout_marginLeft="24dp"
                                    android:id="@+id/bttnUploadKitas"
                                    android:text="Kitas"
                                    android:textColor="@color/WhitePrimary"
                                    android:textSize="20sp"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/bttn_sigin"
                                    android:inputType="text">
                                </Button>
                                <Button
                                    android:id="@+id/bttnUploadPassport"
                                    android:text="Passport"
                                    android:textColor="@color/WhitePrimary"
                                    android:textSize="20sp"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/bttn_sigin"
                                    android:inputType="text"
                                    android:layout_marginRight="24dp"
                                    android:layout_marginBottom="24dp">
                                </Button>
                            </LinearLayout>
                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>